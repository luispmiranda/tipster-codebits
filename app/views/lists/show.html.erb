<% if notice %>
  <p id="notice"><%= notice %></p>
<% end %>

<h1><%= @list.title %></h1>



<%= link_to image_tag('glyphicons/edit.png'), edit_list_path(@list) %> |
<%= link_to 'Back', lists_path %>

<h2>Tips</h2>
<table class="table">
  <tr>
    <th>Content</th>
    <th>Title</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tips.each do |tip| %>
  <tr>
    <td><%= tip.content %></td>
    <td><%= tip.title %></td>
    <td><%= link_to 'Show', list_tip_path(tip) %></td>
    <td><%= link_to 'Edit', edit_list_tip_path(tip) %></td>
    <td><%= link_to 'Destroy', list_tip_path(tip), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

