<div class="row-fluid">
  <div class="span6">
    <h3><%= @list.title %></h3>
  </div>

  <div class="span3 down">
    <% if can? :manage, @list %>
      <div class="btn-group pull-right">
        <%= link_to new_list_tip_path(@list) do %>
          <button class="btn">
            <i class="icon-plus"></i>
            <span class="icon">Add Tip</span>
          </button>
        <% end %>
        <%= link_to edit_list_path do %>
          <button class="btn">
            <i class="icon-edit"></i>
            <span class="icon">Edit</span>
          </button>
        <% end %>
      </div>
    <% end %>
  </div>

  <div class="span2 down">
    <div class="btn-group pull-right">
      <%= link_to favorite_list_path(@list), :method => :post do %>
        <button class="btn">
          <i class="icon-pushpin"></i>
          <span class="icon">Favorite</span>
        </button>
      <% end %>
    </div>
  </div>
</div>

<div class="row-fluid">
  <div class="span2">
    <span class="label label-inverse"><%= @list.category.name %></span>
  </div>
  <div class="span10">
    <p><%= @list.desc %><p>
  </div>
</div>

<div class="row-fluid">
  <div class=" fix-margins">
<br/>
<hr/>
  <% if @list.tips.empty? %>
    <p>There are no tips yet. <strong><%= link_to 'Why don\'t you add one?', new_list_tip_path(@list) %></strong></p>
  <% else %>
    <% @list.tips.each do |tips| %>
    <div class="tip-container">
      <div class="tip-title">
        <i class='icon-tasks'></i><%= tips.title%>
      </div>
      <div class="row-fluid">
        <div class="span12">
          <%= "<div class=\"#{@list.category.name.downcase}\">".html_safe %>
            <pre><code><%= tips.content %></code></pre>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
<% end %>

<br/>

<div class="row-fluid">
  <div class="span12">
      <%= link_to lists_path do %>
        <i class="icon-arrow-left"></i>
        <span class="icon">Back</span>
      <% end %>
  </div>
</div>
