<div class="row-fluid">
  <div class="span6">
    <h1><%= @tip.title %></h1>
  </div>

  <div class="span4">
    <% if can? :manage, @tip.list %>
      <div class="btn-group pull-right">
        <%= link_to edit_list_tip_path(@list,@tip) do %>
          <button class="btn">
            <i class="icon-edit"></i>
            <span class="icon">Edit</span>
          </button>
        <% end %>
      </div>
    <% end %>
  </div>

  <div class="span2">
    <div class="btn-group pull-right">
      <%= link_to favorite_list_tip_path(@list,@tip) do %>
        <button class="btn">
          <i class="icon-star-empty"></i>
          <span class="icon">Favorite</span>
        </button>
      <% end %>
    </div>
  </div>
</div>

<div class="row-fluid">
  <div class="span12">
    <%= "<div class=\"#{@list.category.name.downcase}\">".html_safe %>
      <pre><code><%= @tip.content %></code></pre>
    </div>
  </div>
</div>

<p id="notice"><%= notice %></p>


<%#= link_to 'Edit', edit_list_tip_path(@list,@tip) %>
<%#= link_to 'Back', list_tips_path(@list) %>
<div class="row-fluid">
  <div class="span12">
      <%= link_to list_tips_path(@list) do %>
        <i class="icon-arrow-left"></i>
        <span class="icon">Back</span>
      <% end %>
  </div>
</div>